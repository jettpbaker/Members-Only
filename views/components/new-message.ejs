<head>
    <link rel="stylesheet" href="/css/new-message.css">
</head>
<body>
<div class="new-message-container">
    <h3>Share a message</h3>
    <form action="/new-message" method="POST" class="new-message-form">
        <textarea 
            name="message" 
            id="message-content" 
            placeholder="What's on your mind?" 
            maxlength="280"
            required
        ></textarea>
        <div class="message-form-footer">
            <span class="character-count">0/280</span>
            <% if (isAuthenticated) { %>
                <button type="submit" class="submit-message-btn">Post</button>
            <% } else { %>
                <button type="submit" class="submit-message-btn" disabled>Post</button>
            <% } %>
        </div>
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const messageTextarea = document.getElementById('message-content');
    const characterCount = document.querySelector('.character-count');
    
    messageTextarea.addEventListener('input', function() {
        const currentLength = this.value.length;
        characterCount.textContent = `${currentLength}/280`;
    });
});
</script>
</body>